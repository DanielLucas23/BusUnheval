        android:supportsRtl="true"
        android:theme="@style/Theme.BusUnheval"
        tools:targetApi="31"
        android:name=".services.ApplicationClass">
        <activity
            android:name=".activities.AsistenteActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <activity
            android:name=".activities.MapActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ARActivity"
            android:exported="false" />
        <activity
            android:name=".activities.Paneles"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyALFKh4lsD2JGUlXm8LnjCHqp3mM3SyG0Y" />

